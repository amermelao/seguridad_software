<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@android:id/tabhost"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

            <TextView
                    android:id="@+id/pagerViewTextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fernando Paulsen"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF" android:gravity="center_vertical|left" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_toLeftOf="@+id/pagerViewButtonCreateEvent"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pagerViewButtonProfile" android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_manage"
                    android:layout_alignParentEnd="true"
                    android:onClick="onSettingsPressed"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pagerViewButtonGroups"
                    android:adjustViewBounds="true"
                    android:maxWidth="57dp"
                    android:maxHeight="57dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_event_256" android:layout_toLeftOf="@+id/pagerViewButtonProfile"
                    />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pagerViewButtonCreateEvent"
                    android:src="@android:drawable/ic_menu_add"
                    android:layout_centerVertical="true" android:layout_toLeftOf="@+id/pagerViewButtonGroups"/>

        </RelativeLayout>

        <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal" />

        <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" >

            <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
            </android.support.v4.view.ViewPager>

        </RelativeLayout>

    </LinearLayout>

</TabHost>